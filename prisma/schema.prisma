generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

enum TalkMode {
  PHONE
  VIDEO
  CHAT
  SCHEDULE
}

enum TalkStatus {
  WAITING
  SCHEDULED
  ACTIVE
  COMPLETED
  ASYNC
  CANCELLED
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  passwordHash   String
  name           String
  phone          String?
  company        String?
  role           Role           @default(CLIENT)
  isEmailVerified Boolean       @default(false)
  projects       Project[]
  messages       Message[]
  tickets        Ticket[]
  payments       Payment[]
  talkRequests   TalkRequest[]
  otps           Otp[]
  createdAt      DateTime       @default(now())
}

model TalkRequest {
  id           String      @id @default(cuid())
  name         String
  email        String?
  phone        String?
  requirement  String
  mode         TalkMode
  immediate    Boolean     @default(false)
  scheduledFor DateTime?
  status       TalkStatus  @default(WAITING)
  roomId       String?
  meetingLink  String?
  transcript   Json?
  user         User?       @relation(fields: [userId], references: [id])
  userId       String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([mode, status, scheduledFor])
  @@index([createdAt])
}

model Otp {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())

  @@index([email])
}

model Project {
  id        String    @id @default(cuid())
  name      String
  type      String
  status    String
  progress  Int       @default(0)
  deadline  DateTime?
  client    User      @relation(fields: [clientId], references: [id])
  clientId  String
  files     File[]
  messages  Message[]
  payments  Payment[]
  createdAt DateTime  @default(now())
}

model Message {
  id        String   @id @default(cuid())
  content   String
  isAdmin   Boolean  @default(false)
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
}

model File {
  id        String   @id @default(cuid())
  name      String
  url       String
  size      Int
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  createdAt DateTime @default(now())
}

model Payment {
  id        String   @id @default(cuid())
  amount    Int
  status    String
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model Ticket {
  id        String   @id @default(cuid())
  title     String
  priority  String
  status    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

